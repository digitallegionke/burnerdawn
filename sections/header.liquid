{% style %}
.header-container {
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  overflow: hidden;
  background-color: #f6f6f4;
}

.header-navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 80px;
  border-bottom: 1px solid rgba(53, 68, 57, 0.1);
}

.header-logo {
  max-width: 150px;
}

.header-logo-image {
  width: 100%;
  height: auto;
}

.header-nav-menu {
  display: flex;
  gap: 40px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.header-nav-link {
  color: #354439;
  text-decoration: none;
  font-size: 16px;
  font-weight: 500;
  transition: color 0.3s ease;
}

.header-nav-link:hover {
  color: #c06654;
}

.header-nav-icons {
  display: flex;
  gap: 20px;
  align-items: center;
}

.header-icon {
  color: #354439;
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  transition: color 0.3s ease;
}

.header-icon:hover {
  color: #c06654;
}

.header-icon svg {
  width: 100%;
  height: 100%;
}

.header-mobile-menu {
  display: none;
}

.header-top {
  display: flex;
  flex-direction: column;
  gap: 70px;
  padding-top: 60px;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 36px;
  padding: 0 80px;
  position: relative;
}

.header-text-content {
  display: flex;
  flex-direction: column;
  gap: 36px;
  max-width: 999px;
  z-index: 2;
}

.header-image-wrapper {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 40%;
  max-width: 500px;
  z-index: 1;
}

.header-hero-image {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: 12px;
}

.header-title {
  max-width: 999px;
  font-size: 66px;
  font-weight: 600;
  color: #354439;
  line-height: 1.2;
  margin: 0;
}

.header-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14px 28px;
  background-color: #c06654;
  border-radius: 999px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.header-button-text {
  font-size: 20px;
  font-weight: 700;
  color: #ffffff;
}

.header-mission {
  background-color: #354439;
  padding-bottom: 80px;
  width: 100%;
}

.header-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.mission-content {
  display: flex;
  flex-direction: column;
  gap: 13px;
  padding: 0 80px;
  margin-top: 43px;
}

.mission-subtitle {
  font-size: 19px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  margin: 0;
}

.mission-text {
  font-size: 40px;
  color: #ffffff;
  max-width: 1214px;
  margin: 0;
  line-height: 1.3;
}

.menu-toggle {
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
  color: #354439;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  transition: color 0.3s ease;
}

.menu-toggle:hover {
  color: #c06654;
}

@media screen and (max-width: 1024px) {
  .header-navigation {
    padding: 20px 40px;
  }

  .header-nav-menu {
    display: none;
  }

  .header-mobile-menu {
    display: block;
  }

  .header-content {
    padding: 0 40px;
  }

  .header-title {
    font-size: 48px;
    max-width: 100%;
  }

  .header-image-wrapper {
    position: relative;
    width: 100%;
    max-width: none;
    transform: none;
    top: 0;
    margin-top: 30px;
  }

  .mission-content {
    padding: 0 40px;
  }

  .mission-text {
    font-size: 32px;
  }
}

@media screen and (max-width: 768px) {
  .header-navigation {
    padding: 15px 20px;
  }

  .header-content {
    padding: 0 20px;
  }

  .header-title {
    font-size: 36px;
  }

  .header-button {
    padding: 12px 24px;
  }

  .header-button-text {
    font-size: 18px;
  }

  .mission-content {
    padding: 0 20px;
  }

  .mission-subtitle {
    font-size: 16px;
  }

  .mission-text {
    font-size: 24px;
  }
}
{% endstyle %}

<div class="header-container">
  <div class="header-navigation">
    <div class="header-mobile-menu">
      <button class="menu-toggle" aria-label="Toggle Menu">
        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-hamburger" fill="none" viewBox="0 0 18 16">
          <path d="M1 .5a.5.5 0 100 1h15.71a.5.5 0 000-1H1zM.5 8a.5.5 0 01.5-.5h15.71a.5.5 0 010 1H1A.5.5 0 01.5 8zm0 7a.5.5 0 01.5-.5h15.71a.5.5 0 010 1H1a.5.5 0 01-.5-.5z" fill="currentColor"></path>
        </svg>
      </button>
    </div>

    <a href="{{ routes.root_url }}" class="header-logo">
      {%- if section.settings.logo != blank -%}
        {{ section.settings.logo | image_url: width: 150 | image_tag:
          class: 'header-logo-image',
          loading: 'lazy',
          alt: section.settings.logo.alt | default: shop.name
        }}
      {%- else -%}
        <span class="h4">{{ shop.name }}</span>
      {%- endif -%}
    </a>

    {%- if section.settings.menu != blank -%}
      <ul class="header-nav-menu">
        {%- for link in section.settings.menu.links -%}
          <li>
            <a href="{{ link.url }}" class="header-nav-link">{{ link.title }}</a>
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}

    <div class="header-nav-icons">
      <a href="{{ routes.search_url }}" class="header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-search" fill="none" viewBox="0 0 18 19">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M11.03 11.68A5.784 5.784 0 112.85 3.5a5.784 5.784 0 018.18 8.18zm.26 1.12a6.78 6.78 0 11.72-.7l5.4 5.4a.5.5 0 11-.71.7l-5.41-5.4z" fill="currentColor"></path>
        </svg>
      </a>
      <a href="{{ routes.cart_url }}" class="header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-cart" fill="none" viewBox="0 0 18 20">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M1 1.5a.5.5 0 01.5-.5h2a.5.5 0 01.485.379L4.89 4H16.5a.5.5 0 01.485.621l-2 7A.5.5 0 0114.5 12H6.118l.72 3H14.5a.5.5 0 110 1H6a.5.5 0 01-.485-.379L3.89 5H2a.5.5 0 01-.5-.5zM6 13.5a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zm7 0a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0z" fill="currentColor"></path>
        </svg>
      </a>
      {%- if shop.customer_accounts_enabled -%}
        <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header-icon">
          <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-account" fill="none" viewBox="0 0 18 19">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M6 4.5a3 3 0 116 0 3 3 0 01-6 0zm3-4a4 4 0 100 8 4 4 0 000-8zm5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15zM9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35z" fill="currentColor"></path>
          </svg>
        </a>
      {%- endif -%}
    </div>
  </div>

  <div class="header-top">
    <div class="header-content">
      <div class="header-text-content">
        <h1 class="header-title">{{ section.settings.title | default: 'Bring Loved Ones Together with Every Delicious, Clean Creation.' }}</h1>
        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="header-button">
          <span class="header-button-text">{{ section.settings.button_text | default: 'Discover Burner Market' }}</span>
        </a>
      </div>
      {% if section.settings.hero_image != blank %}
        <div class="header-image-wrapper">
          {{ section.settings.hero_image | image_url: width: 800 | image_tag: 
            class: 'header-hero-image',
            loading: 'lazy',
            alt: section.settings.hero_image.alt | default: 'Header hero image'
          }}
        </div>
      {% endif %}
    </div>
    <div class="header-mission">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1440 | image_tag: 
          class: 'header-image',
          loading: 'lazy',
          alt: section.settings.image.alt | default: 'Header image'
        }}
      {% endif %}
      <div class="mission-content">
        <p class="mission-subtitle">{{ section.settings.subtitle | default: 'OUR CORE MISSION' }}</p>
        <p class="mission-text">{{ section.settings.mission_text | default: 'We curate the finest, clean, and delicious food items to make it easy for you to create mouth-watering snacks and meals for yourself and your loved ones, effortlessly.' }}</p>
      </div>
    </div>
  </div>
</div>

