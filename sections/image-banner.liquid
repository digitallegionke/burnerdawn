{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div class="banner-container page-width">
  <div class="banner-content">
    <div class="banner-text-content">
      <h1 class="banner-title">{{ section.settings.title | escape }}</h1>
      {%- if section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="banner-button">
          <span class="banner-button-text">{{ section.settings.button_text | escape }}</span>
        </a>
      {%- endif -%}
    </div>
    {%- if section.settings.image != blank -%}
      <div class="banner-image-wrapper">
        {%- assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio -%}
        {{ section.settings.image | image_url: width: 1500 | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: image_height,
          class: 'banner-hero-image',
          alt: section.settings.image.alt | default: section.settings.title
        }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-banner.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Bring Loved Ones Together with Every Delicious, Clean Creation.",
      "label": "t:sections.image-banner.settings.title.label"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Discover Burner Market",
      "label": "t:sections.image-banner.settings.button_text.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.image-banner.settings.button_link.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-banner.presets.name",
      "settings": {
        "title": "Bring Loved Ones Together with Every Delicious, Clean Creation.",
        "button_text": "Discover Burner Market",
        "button_link": "/collections/all"
      }
    }
  ]
}
{% endschema %}

{% stylesheet %}
.banner-container {
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  overflow: hidden;
  background-color: #f6f6f4;
}

.banner-content {
  display: flex;
  flex-direction: column;
  gap: 36px;
  padding: 60px 80px;
  position: relative;
}

.banner-text-content {
  display: flex;
  flex-direction: column;
  gap: 36px;
  max-width: 600px;
  z-index: 2;
}

.banner-image-wrapper {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 40%;
  max-width: 500px;
  z-index: 1;
}

.banner-hero-image {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: 12px;
}

.banner-title {
  max-width: 600px;
  font-size: 66px;
  font-weight: 500;
  color: #354439;
  line-height: 1.1;
  margin: 0;
  font-family: 'Clash Display', sans-serif;
}

.banner-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16px 32px;
  background-color: #c06654;
  border-radius: 999px;
  text-decoration: none;
  transition: all 0.3s ease;
  margin-top: 20px;
  width: fit-content;
}

.banner-button-text {
  font-size: 18px;
  font-weight: 500;
  color: #ffffff;
}

@media screen and (max-width: 1024px) {
  .banner-content {
    padding: 40px;
  }

  .banner-title {
    font-size: 48px;
    max-width: 100%;
  }

  .banner-image-wrapper {
    position: relative;
    width: 100%;
    max-width: none;
    transform: none;
    top: 0;
    margin-top: 30px;
  }
}

@media screen and (max-width: 768px) {
  .banner-content {
    padding: 20px;
  }

  .banner-title {
    font-size: 36px;
  }

  .banner-button {
    padding: 12px 24px;
  }

  .banner-button-text {
    font-size: 18px;
  }
}
{% endstylesheet %}
