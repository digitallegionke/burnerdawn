{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div class="banner-container">
  <div class="banner-content">
    <div class="banner-text">
      <h1 class="banner-heading">
        {{ section.settings.title | default: 'Bring Loved Ones Together with Every Delicious, Clean Creation.' }}
      </h1>
      <a href="{{ section.settings.button_link }}" class="banner-button">
        {{ section.settings.button_text | default: 'Discover Burner Market' }}
      </a>
    </div>
    {% if section.settings.image1 != blank %}
      <div class="banner-image">
        {{ section.settings.image1 | image_url: width: 1440 | image_tag: 
          loading: 'lazy',
          class: 'banner-img'
        }}
      </div>
    {% endif %}
    <div class="banner-mission">
      <span class="mission-label">OUR CORE MISSION</span>
      <p class="mission-text">
        We curate the finest, clean, and delicious food items to make it easy for you to create
        mouth-watering snacks and meals for yourself and your loved ones, effortlessly.
      </p>
    </div>
  </div>
</div>

<style>
.banner-container {
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  background: #f6f6f4;
}

.banner-content {
  display: flex;
  flex-direction: column;
  padding: 60px 0 0;
}

.banner-text {
  padding: 0 80px;
  margin-bottom: 70px;
}

.banner-heading {
  font-family: 'Clash Display', sans-serif;
  font-size: 66px;
  font-weight: 600;
  line-height: 1.2;
  color: #354439;
  max-width: 999px;
  margin: 0 0 36px;
}

.banner-button {
  display: inline-flex;
  padding: 14px 28px;
  background: #c06654;
  border-radius: 999px;
  color: white;
  font-weight: 700;
  font-size: 20px;
  text-decoration: none;
  transition: background 0.3s ease;
}

.banner-button:hover {
  background: #a85745;
}

.banner-image {
  width: 100%;
  height: auto;
}

.banner-img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.banner-mission {
  background: #354439;
  padding: 43px 80px;
  color: white;
}

.mission-label {
  display: block;
  font-size: 19px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 13px;
}

.mission-text {
  font-size: 40px;
  line-height: 1.2;
  max-width: 1214px;
  margin: 0;
}

@media screen and (max-width: 768px) {
  .banner-text {
    padding: 0 20px;
    margin-bottom: 40px;
  }
  
  .banner-heading {
    font-size: 40px;
    max-width: 100%;
  }
  
  .banner-mission {
    padding: 30px 20px;
  }
  
  .mission-text {
    font-size: 24px;
  }
}
</style>

{% schema %}
{
  "name": "Image banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Bring Loved Ones Together with Every Delicious, Clean Creation.",
      "label": "Banner Title"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Discover Burner Market",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Image banner",
      "settings": {
        "title": "Bring Loved Ones Together with Every Delicious, Clean Creation.",
        "button_text": "Discover Burner Market",
        "button_link": "/collections/all"
      }
    }
  ]
}
{% endschema %}
