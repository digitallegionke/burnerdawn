{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<style>
  .image-banner {
    max-width: 1440px;
    margin: 0 auto;
    background-color: #f6f6f4;
    font-family: var(--font-body-family);
  }

  .banner-title {
    font-size: 66px;
    font-weight: 600;
    line-height: 1.2;
    color: #354439;
    max-width: 999px;
    margin-bottom: 36px;
  }

  .banner-button {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: #c06654;
    border-radius: 999px;
    color: white;
    font-weight: 700;
    font-size: 20px;
    text-decoration: none;
  }

  .banner-image {
    width: 100%;
    height: 534px;
    object-fit: cover;
  }

  .banner-mission {
    background: #354439;
    padding: 43px 80px 80px;
    color: white;
  }

  .mission-label {
    font-size: 19px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 13px;
    text-transform: uppercase;
  }

  .mission-text {
    font-size: 40px;
    font-weight: 400;
    line-height: 1.2;
    max-width: 1214px;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .banner-title {
      font-size: 40px;
      max-width: 100%;
    }

    .banner-mission {
      padding: 30px 20px 40px;
    }

    .mission-text {
      font-size: 24px;
    }
  }
</style>

<div class="image-banner">
  <div class="banner-content">
    <div class="banner-header" style="padding: 60px 80px;">
      <h1 class="banner-title">
        {{ section.settings.title | default: 'Bring Loved Ones Together with Every Delicious, Clean Creation.' }}
      </h1>
      <a href="{{ section.settings.button_link }}" class="banner-button">
        {{ section.settings.button_text | default: 'Discover Burner Market' }}
      </a>
    </div>

    {% if section.settings.image1 != blank %}
      {{ section.settings.image1 | image_url: width: 1440 | image_tag:
        class: 'banner-image',
        loading: 'lazy'
      }}
    {% endif %}

    <div class="banner-mission">
      <div class="mission-label">OUR CORE MISSION</div>
      <div class="mission-text">
        We curate the finest, clean, and delicious food items to make it easy for you to create
        mouth-watering snacks and meals for yourself and your loved ones, effortlessly.
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Bring Loved Ones Together with Every Delicious, Clean Creation.",
      "label": "Banner Title"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Discover Burner Market",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Image banner",
      "settings": {
        "title": "Bring Loved Ones Together with Every Delicious, Clean Creation.",
        "button_text": "Discover Burner Market",
        "button_link": "/collections/all"
      }
    }
  ]
}
{% endschema %}
